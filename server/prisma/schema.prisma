generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model chat {
  id             Int       @id @default(autoincrement())
  conversationId String
  chatline       chatline?
  createdAt   DateTime?      @default(now())
}

model chatline {
  id        BigInt   @id @default(autoincrement()) @db.UnsignedBigInt
  lineText  String   @db.Text
  chatId    Int      @unique(map: "ChatLine_chatId_key")
  userId    Int      @unique(map: "ChatLine_userId_key")
  chat      chat     @relation(fields: [chatId], references: [id], map: "ChatLine_chatId_fkey")
  user      user     @relation(fields: [userId], references: [id], map: "ChatLine_userId_fkey")
  createdAt DateTime @default(now())
}

model contactlist {
  id            Int  @id @default(autoincrement())
  userId        Int
  contactUserId Int
  user          user @relation(fields: [contactUserId], references: [id], map: "ContactList_contactUserId_fkey")

  @@index([contactUserId], map: "ContactList_contactUserId_fkey")
}

model user {
  id          Int           @id @default(autoincrement())
  email       String        @unique(map: "User_email_key") @db.VarChar(255)
  password    String
  name        String?       @db.VarChar(255)
  role        user_role
  chatline    chatline?
  contactlist contactlist[]
  createdAt   DateTime?      @default(now())
  updatedAt   DateTime?      @updatedAt
}

enum user_role {
  USER
  ADMIN
}
